[!windows] skip 'requires Windows'

write-event 'Add fields (not under root)'
wait-for-event-log 1
exec winlogbeat -c winlogbeat.yml --path.data $WORK/data
check-event-count output 1
check-event-field output 0 message 'Add fields (not under root)'
check-event-field output 0 log.level 'information'
check-event-field output 0 fields.global 'field'
check-event-field output 0 fields.env 'dev'
check-event-field output 0 fields.local 'field'
check-event-field output 0 fields.level 'overwrite'
check-event-field output 0 fields.num '1'
check-event-field-absent output 0 tags

-- winlogbeat.yml --
winlogbeat.shutdown_timeout: 30s
fields:
  global: field
  env: prod
  level: overwrite
winlogbeat.event_logs:
  - name: ${PROVIDER:?missing PROVIDER}
    no_more_events: stop
    fields:
      local: field
      env: dev
      num: 1
output.file:
  path: ${WORK:?missing WORK}/output
  filename: winlogbeat
  rotate_every_kb: 10000
queue.mem:
  events: 4096
  flush.min_events: 1
  flush.timeout: 0.1s
logging.level: warning
logging.to_files: false
