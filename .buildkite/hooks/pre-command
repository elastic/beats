#SETUP_GVM_VERSION="v0.5.1"
#WORKSPACE="$(pwd)"
#
#export SETUP_GVM_VERSION
#export WORKSPACE

if [[ "$BUILDKITE_PIPELINE_SLUG" == "filebeat" ]]; then
