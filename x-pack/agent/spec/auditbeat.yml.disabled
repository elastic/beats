name: Auditbeat
cmd: auditbeat
rules:
- filter_values_with_regexp:
    key: type
    re: ^audit/.+
    selector: streams
- map:
    path: streams
    rules:
    - translate_with_regexp:
        path: type
        re: ^audit/(.+)
        with: $1
- copy:
    from: streams
    to: auditbeat
- map:
    path: auditbeat.streams
    rules:
    - rename:
        from: type
        to: module
- rename:
    from: auditbeat.streams
    to: modules
- rename:
    from: output.elasticsearch.url
    to: hosts
- filter:
    selectors:
    - auditbeat
    - output
    - keystore
when: HasItems(%{[auditbeat.modules]}) && HasNamespace('output', 'elasticsearch',
  'redis', 'kafka', 'logstash')
