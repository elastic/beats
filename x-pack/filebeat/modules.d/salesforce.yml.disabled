        client.secret: client-secret
        token_url: "https://login.salesforce.com"
        user: "abc.xyz@mail.com"
        password: "P@$$W0₹D"
      jwt_bearer_flow:
        enabled: true
        client.id: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
