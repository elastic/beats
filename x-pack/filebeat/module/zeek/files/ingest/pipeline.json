{
  "description": "Pipeline for normalizing Zeek files.log",
  "processors": [
    {
      "set": {
        "field": "event.created",
        "value": "{{_ingest.timestamp}}"
      }
    },
    {
      "date": {
        "field": "zeek.files.ts",
        "formats": ["UNIX"]
      }
    },
    {
      "remove": {
        "field": "zeek.files.ts"
      }
    },
    {
      "script": {
        "lang": "painless",
        "source": "ctx.zeek.files.hosts.rx = ctx.zeek.files.hosts.rx[0];",
        "ignore_failure": true
      }
    },
    {
      "script": {
        "lang": "painless",
        "source": "ctx.zeek.files.hosts.tx = ctx.zeek.files.hosts.tx[0];",
        "ignore_failure": true
      }
    }
  ],
  "on_failure" : [{
    "set" : {
      "field" : "error.message",
      "value" : "{{ _ingest.on_failure_message }}"
    }
  }]
}
