{
  "description": "Pipeline for normalizing envoyproxy logs",
  "processors": [
    {
      "pipeline": {
          "if": "ctx.message.charAt(0) != (char)(\"{\")",
          "name": "{< IngestPipeline "pipeline-plaintext" >}"
      }
    },
    {
      "pipeline": {
          "if": "ctx.message.charAt(0) == (char)(\"{\")",
          "name": "{< IngestPipeline "pipeline-json" >}"
      }
    },
    {
      "script": {
        "lang": "painless",
        "source": "ctx.event.created = ctx['@timestamp']; ctx['@timestamp'] = ctx['timestamp']; ctx.remove('timestamp');",
        "ignore_failure" : true
      }
    }
  ],
  "on_failure" : [{ 
    "set" : { 
      "field" : "error.message", 
      "value" : "pipeline-entry: {{ _ingest.on_failure_message }}" 
    } 
  }]
}