[Unit]
Description=
Documentation=https://www.elastic.co/products/beats/agent
Wants=network-online.target
After=network-online.target

[Service]

Environment="BEAT_LOG_OPTS=-e"
Environment="BEAT_CONFIG_OPTS=-c /etc/agent/agent.yml"
Environment="BEAT_PATH_OPTS=-path.home /usr/share/agent -path.config /etc/agent -path.data /var/lib/agent -path.logs /var/log/agent"
ExecStart=/usr/share/agent/bin/agent $BEAT_LOG_OPTS $BEAT_CONFIG_OPTS $BEAT_PATH_OPTS
Restart=always

[Install]
WantedBy=multi-user.target
