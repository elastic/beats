{
  "template" : "packetbeat-*",
  "settings" : {
    "index.refresh_interval" : "1s"
  },
  "mappings" : {
    "_default_" : {
      "date_detection": false,
      "_all": {
        "enabled": true,
        "omit_norms": true
      },
      "properties": {
        "request_raw" : {
          "type": "string",
          "index" : "analyzed",
          "omit_norms": true
        },
        "response_raw" : {
          "type": "string",
          "index" : "analyzed",
          "omit_norms": true
        },
        "params": {
          "type": "string",
          "index": "analyzed",
          "omit_norms": true
        },
        "@timestamp": {
          "type": "date"
        },
        "client_location": {
          "type": "geo_point"
        }
      },
      "dynamic_templates": [{
        "template1": {
          "match": "*",
          "mapping": {
            "type": "{dynamic_type}",
            "index": "not_analyzed",
            "doc_values": true
          }
        }
      }]
    }
  }
}
