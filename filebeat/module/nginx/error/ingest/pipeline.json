{
    "description": "Pipeline for parsing the Nginx error logs",
    "on_failure": [
        {
            "set": {
                "field": "error.message",
                "value": "{{ _ingest.on_failure_message }}"
            }
        }
    ],
    "processors": [
        {
            "grok": {
                "field": "message",
                "ignore_missing": true,
                "patterns": [
                    "%{DATA:nginx.error.time} \\[%{DATA:log.level}\\] %{NUMBER:process.pid:long}#%{NUMBER:process.thread.id:long}: (\\*%{NUMBER:nginx.error.connection_id:long} )?%{GREEDYDATA:message}"
                ]
            }
        },
        {
            "rename": {
                "field": "@timestamp",
                "target_field": "event.created"
            }
        },
        {
            "date": {
                "field": "nginx.error.time",
                "formats": [
                    "yyyy/MM/dd H:m:s"
                ],
                "ignore_failure": true,
                "target_field": "@timestamp"
            }
        },
        {
            "date": {
                "field": "@timestamp",
                "formats": [
                    "ISO8601"
                ],
                "if": "ctx.event.timezone != null",
                "on_failure": [
                    {
                        "append": {
                            "field": "error.message",
                            "value": "{{ _ingest.on_failure_message }}"
                        }
                    }
                ],
                "timezone": "{{ event.timezone }}"
            }
        },
        {
            "remove": {
                "field": "nginx.error.time"
            }
        }
    ]
}