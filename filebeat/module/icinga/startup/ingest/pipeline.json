{
    "description": "Pipeline for parsing icinga startup logs",
    "on_failure": [
        {
            "set": {
                "field": "error.message",
                "value": "{{ _ingest.on_failure_message }}"
            }
        }
    ],
    "processors": [
        {
            "grok": {
                "field": "message",
                "ignore_missing": true,
                "pattern_definitions": {
                    "GREEDYMULTILINE": "(.|\n)*"
                },
                "patterns": [
                    "%{WORD:log.level}/%{WORD:icinga.startup.facility}: %{GREEDYMULTILINE:message}"
                ]
            }
        }
    ]
}