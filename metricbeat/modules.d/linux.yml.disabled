# Module: linux
# Docs: https://www.elastic.co/guide/en/beats/metricbeat/master/metricbeat-module-linux.html

- module: linux
  period: 10s
  metricsets:
    - "pageinfo"
    # - ksm
    # - conntrack
    # - perf
  enabled: true
  #hostfs: /hostfs
  perf.processes:
    - process: "node"
      events:
        - hardware: false
        - software: true



