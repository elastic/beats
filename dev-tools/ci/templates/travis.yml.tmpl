      go: $GO_VERSION
      stage: {{$job.Stage}}
      env:
{{- range $envVar := $job.Env}}
        - {{$envVar}}
{{- end}}
{{end}}
    # Generators
    - os: linux
      env:
        - TARGETS="-C generator/metricbeat test"
      go: $GO_VERSION
      stage: test
