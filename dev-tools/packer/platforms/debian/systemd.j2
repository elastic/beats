[Unit]
Description={{.beat_binary_name}}
Documentation={{.beat_doc_url}}
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/share/{{.beat_binary_name}}/bin/{{.beat_binary_name}} -c /etc/{{.beat_binary_name}}/{{.beat_binary_name}}.yml -path.home /usr/share/{{.beat_binary_name}} -path.config /etc/{{.beat_binary_name}} -path.data /var/lib/{{.beat_binary_name}} -path.logs /var/log/{{.beat_binary_name}}
Restart=always

[Install]
WantedBy=multi-user.target
