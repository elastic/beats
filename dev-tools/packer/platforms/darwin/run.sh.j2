#!/bin/bash

# this is executed in the docker fpm image
set -e
cd /build

# add SNAPSHOT if it was requested
VERSION={{.version}}
if [ "$SNAPSHOT" = "yes" ]; then
    VERSION="${VERSION}-SNAPSHOT"
fi

mkdir /{{.beat_binary_name}}-${VERSION}-darwin-x86_64
cp -a homedir/. /{{.beat_binary_name}}-${VERSION}-darwin-x86_64/
cp {{.beat_binary_name}}-darwin-amd64 /{{.beat_binary_name}}-${VERSION}-darwin-x86_64/{{.beat_binary_name}}
cp {{.beat_binary_name}}-darwin.yml /{{.beat_binary_name}}-${VERSION}-darwin-x86_64/{{.beat_binary_name}}.yml
cp {{.beat_binary_name}}-darwin.reference.yml /{{.beat_binary_name}}-${VERSION}-darwin-x86_64/{{.beat_binary_name}}.reference.yml
cp fields.yml /{{.beat_binary_name}}-${VERSION}-darwin-x86_64/
cp -a modules.d-darwin/ /{{.beat_binary_name}}-${VERSION}-darwin-x86_64/modules.d || true

mkdir -p upload
tar czvf upload/{{.beat_binary_name}}-${VERSION}-darwin-x86_64.tar.gz /{{.beat_binary_name}}-${VERSION}-darwin-x86_64
echo "Created upload/{{.beat_binary_name}}-${VERSION}-darwin-x86_64.tar.gz"

cd upload
sha1sum {{.beat_binary_name}}-${VERSION}-darwin-x86_64.tar.gz | awk '{print $1;}' > {{.beat_binary_name}}-${VERSION}-darwin-x86_64.tar.gz.sha1
echo "Created upload/{{.beat_binary_name}}-${VERSION}-darwin-x86_64.tar.gz.sha1"
