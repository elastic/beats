{
  "index_patterns": [
    "metricbeat-load-7.0.0*"
  ],
  "mappings": {
    "_doc": {
      "_meta": {
        "version": "7.0.0"
      },
      "date_detection": false,
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "agent": {
          "properties": {
            "ephemeral_id": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "hostname": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "id": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "name": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "type": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "version": {
              "ignore_above": 1024,
              "type": "keyword"
            }
          }
        }
      }
    }
  },
  "order": 1,
  "settings": {
    "index": {
      "codec": "best_compression",
      "mapping": {
        "total_fields": {
          "limit": 10000
        }
      },
      "number_of_routing_shards": 30,
      "number_of_shards": 1,
      "query": {
        "default_field": [
          "agent.version",
          "agent.name",
          "agent.type",
          "agent.id",
          "fields.*"
        ]
      },
      "refresh_interval": "5s"
    }
  }
}
